{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [
            ":29668"
          ],
          "logs": {
            "logger_names": {
              "v3.x.y": "log0"
            }
          },
          "routes": [
            {
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "vars",
                          "root": "/usr/share/caddy"
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [
                            {
                              "dial": "localhost:2082"
                            }
                          ]
                        }
                      ],
                      "match": [
                        {
                          "header": {
                            "Connection": [
                              "*Upgrade*"
                            ],
                            "Upgrade": [
                              "websocket"
                            ]
                          },
                          "path": [
                            "/game_service"
                          ]
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "file_server",
                          "hide": [
                            "/etc/caddy/Caddyfile"
                          ]
                        }
                      ]
                    }
                  ]
                }
              ],
              "match": [
                {
                  "host": [
                    "v3.x.y"
                  ]
                }
              ],
              "terminal": true
            }
          ]
        },
        "srv1": {
          "listen": [
            ":443"
          ],
          "logs": {
            "logger_names": {
              "v19.x.y": "log0",
              "v20.x.y": "log0",
              "v6.x.y": "log0",
              "v7.x.y": "log0",
              "v8.x.y": "log0"
            }
          },
          "routes": [
            {
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "vars",
                          "root": "/usr/share/caddy"
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [
                            {
                              "dial": "localhost:2082"
                            }
                          ]
                        }
                      ],
                      "match": [
                        {
                          "header": {
                            "Connection": [
                              "*Upgrade*"
                            ],
                            "Upgrade": [
                              "websocket"
                            ]
                          },
                          "path": [
                            "/game_service"
                          ]
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "file_server",
                          "hide": [
                            "/etc/caddy/Caddyfile"
                          ]
                        }
                      ]
                    }
                  ]
                }
              ],
              "match": [
                {
                  "host": [
                    "v19.x.y",
                    "v20.x.y",
                    "v6.x.y",
                    "v7.x.y",
                    "v8.x.y"
                  ]
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "issuers": [
              {
                "email": "admin@x.y",
                "module": "acme"
              },
              {
                "email": "admin@x.y",
                "module": "zerossl"
              }
            ],
            "subjects": [
              "v19.x.y",
              "v20.x.y",
              "v6.x.y",
              "v7.x.y",
              "v8.x.y",
              "v3.x.y"
            ]
          }
        ]
      }
    }
  },
  "logging": {
    "logs": {
      "default": {
        "exclude": [
          "http.log.access.log0"
        ]
      },
      "log0": {
        "include": [
          "http.log.access.log0"
        ],
        "writer": {
          "filename": "/usr/share/caddy/access.log",
          "output": "file"
        }
      }
    }
  }
}
